<div class="auth__header flex nvh">
    <h3>Sign Up</h3>
</div>
<div class="auth__container">
    <form id="form" action="/auth/signup" method="POST" enctype="multipart/form-data">
        <div class="auth__laber flex">
            <label for="username">
                <h5>Username</h5>
            </label>
            <input type="text" name="username" required placeholder="username">
        </div>
        <div class="auth__label flex">
            <label for="password">
                <h5>Password</h5>
            </label>
            <input type="password" name="password" required placeholder="password">
        </div>
        <div class="auth__label flex">
            <label for="namereal">
                <h5>Real name</h5>
            </label>
            <input type="text" name="namereal" required placeholder="real name">
        </div>
        <div class="auth__label flex">
            <h5>Favorite Genre</h5>
            <select name="genre">
                <option value="Action">Action</option>
                <option value="Adventures">Adventures</option>
                <option value="Animation">Animation</option>
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Horror">Horror</option>
                <option value="Sci-Fi">Sci-Fi</option>
                <option value="Thriller">Thriller</option>
            </select>
        </div>
        {{#if errorMessage}}
        <div class="error-message">{{ errorMessage }}</div>
        {{/if}}

        <div class="auth__label flex__column">
            <section>
                <label for="photo">
                    <h5>Profile img</h5>
                </label>

                <input type="file" name="photo" id="myPhoto">
                <div class="auth__label flex">
                    <button>
                        <h6>Create account</h6>
                    </button>
                </div>
            </section>
        </div>
    </form>
</div>
